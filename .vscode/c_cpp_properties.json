{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "C:/MinGW/include",
                "C:/MinGW/lib/gcc/mingw32/9.2.0/include"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cStandard": "c17",
            "cppStandard": "gnu++17",
            "intelliSenseMode": "windows-gcc-x64",
            "compilerPath": "C:/MinGW/bin/gcc.exe"
        },        
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include", 
                "/usr/include/x86_64-linux-gnu"  // For additional architecture-specific headers
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cStandard": "c17",
            "cppStandard": "gnu++17",
            "intelliSenseMode": "linux-gcc-x64",  // GCC for Linux
            "compilerPath": "/usr/bin/gcc"  // Path to GCC
        }
        
    ],
    "version": 4
}